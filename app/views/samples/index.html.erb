<h1>Listing samples</h1>

<table>
  <thead>
    <tr>
      <th>Line</th>
      <th>Season</th>
      <th>Style</th>
      <th>Color</th>
      <th>Date out</th>
      <th>To who</th>
      <th>Date in</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @samples.each do |sample| %>
      <tr>
        <td><%= sample.line %></td>
        <td><%= sample.season %></td>
        <td><%= sample.style %></td>
        <td><%= sample.color %></td>
        <td><%= sample.date_out %></td>
        <td><%= sample.to_who %></td>
        <td><%= sample.date_in %></td>
        <td><%= sample.location %></td>
        <td><%= link_to 'Show', sample %></td>
        <td><%= link_to 'Edit', edit_sample_path(sample) %></td>
        <td><%= link_to 'Destroy', sample, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

